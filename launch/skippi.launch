<launch>
    	<!-- Start Joystick-->
    	<node pkg="joystick" type="joynode" name="joystick"/>

    	<!-- Start Joystick converter-->
    	<node pkg="joystick_interface" type="joystick_interface" name="joystick_interface"/>

    	<!-- Start Haptic Interface-->
    	<node pkg="haptic_interface" type="haptic_interface" name="haptic_interface"/>

	<!-- Start left listener -->
	<node pkg="laser_listener" name="left_listener" type="listener.py" args="left_listener kerbDetectLeft step_detect_left"/>

	<!-- Start right listener -->
	<node pkg="laser_listener" name="right_listener" type="listener.py" args="right_listener kerbDetectRight step_detect_right"/>

	<!-- Start left hokuyo -->
	<!--<node pkg="hokuyo_node" name="hokuyo_node4" type="hokuyo_node">
